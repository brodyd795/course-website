  header
    .title-bar
      .title-div
        h1 <a href="/courses/index-old">LING 120 – Computers and Language</a>
      .login-div
        button(id="loginBtn")
          if locals.user
            a(id="qsLogoutBtn" href="/logout").logout-btn.logOutInBtn Log Out
          else
            a(id="qsLoginBtn" href="/login").login-btn.logOutInBtn Log In
    .nav-bar
      a(href="/courses/index-old") Overview
      if locals.user
        a(href="/courses/assignments-old") Assignments
        a(href="/courses/grades-old") Grades
        a(href="/courses/attendance-old") Attendance
      a(href="/courses/resources-old") Resources
